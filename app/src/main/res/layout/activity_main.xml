<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="8dp">

    <!-- Row 6: (C, 0, ., =) -->
    <LinearLayout
        android:id="@+id/row6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="C"
            android:textColor="#FFFFFF"
            android:background="@drawable/circle_button"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="0"
            android:textColor="#FFFFFF"
            android:background="@drawable/circle_button"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn_dot"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="."
            android:textColor="#FFFFFF"
            android:background="@drawable/circle_button"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn_equal"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="="
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9800"
            android:background="@drawable/circle_button"
            android:layout_margin="4dp" />
    </LinearLayout>

    <!-- Row 5: (1, 2, 3, +) -->
    <LinearLayout
        android:id="@+id/row5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/row6"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="1"
            android:textColor="#FFFFFF"
            android:background="@drawable/circle_button"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="2"
            android:textColor="#FFFFFF"
            android:background="@drawable/circle_button"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="3"
            android:textColor="#FFFFFF"
            android:background="@drawable/circle_button"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="+"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9800"
            android:background="@drawable/circle_button"
            android:layout_margin="4dp" />
    </LinearLayout>

    <!-- Row 4: (4, 5, 6, -) -->
    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/row5"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="4"
            android:textColor="#FFFFFF"
            android:background="@drawable/circle_button"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="5"
            android:textColor="#FFFFFF"
            android:background="@drawable/circle_button"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="6"
            android:textColor="#FFFFFF"
            android:background="@drawable/circle_button"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="-"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9800"
            android:background="@drawable/circle_button"
            android:layout_margin="4dp" />
    </LinearLayout>

    <!-- Row 3: (7, 8, 9, *) -->
    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/row4"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="7"
            android:textColor="#FFFFFF"
            android:background="@drawable/circle_button"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="8"
            android:textColor="#FFFFFF"
            android:background="@drawable/circle_button"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="9"
            android:textColor="#FFFFFF"
            android:background="@drawable/circle_button"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn_multiply"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="*"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9800"
            android:background="@drawable/circle_button"
            android:layout_margin="4dp" />
    </LinearLayout>

    <!-- Row 2: (% , ( , ), /) -->
    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/row3"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn_percent"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="%"
            android:textColor="#FFFFFF"
            android:background="@drawable/circle_button"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn_open_bracket"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="("
            android:textColor="#FFFFFF"
            android:background="@drawable/circle_button"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn_close_bracket"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text=")"
            android:textColor="#FFFFFF"
            android:background="@drawable/circle_button"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn_divide"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="/"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9800"
            android:background="@drawable/circle_button"
            android:layout_margin="4dp" />
    </LinearLayout>
</RelativeLayout>
